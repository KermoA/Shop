@model Shop.Models.ChuckNorrisJokes.ChuckNorrisIndexViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1 class="text-white mt-5">Chuck Norris Joke</h1>
    <div class="container text-white">
        <div class="container">
            <!-- Form to request a new joke -->
            <form asp-controller="ChuckNorrisJokes" asp-action="NewJoke" method="post">
                <div class="form-group col-md-offset-3 col-md-5">
                    <button type="submit" class="btn btn-create">New Joke</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
