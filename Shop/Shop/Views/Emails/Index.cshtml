@model Shop.Models.Emails.EmailsIndexViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
</head>
<body>
	<div class="container mt-5">
		<div class="row">
			<div class="col-lg-6 col-md-12 pe-lg-5 align-self-center mb-4">
				<h1 class="text-white mb-3"><strong>Contact Us</strong></h1>
				<p class="text-light" style="font-size: 20px; text-align: justify;">
					Have a question, feedback, or need assistance? Reach out to us using the email form,
					and we’ll get back to you as soon as possible.
					We're here to help and make your experience better!
				</p>
			</div>

			<div class="col-lg-6 col-md-12">
				<form method="post" enctype="multipart/form-data">
					<h1 class="text-white mb-4">Send Email</h1>
					<div class="form-group mb-3">
						<input asp-for="To" class="form-control" placeholder="To" />
					</div>
					<div class="form-group mb-3">
						<input asp-for="Subject" class="form-control" placeholder="Subject" />
					</div>
					<div class="form-group mb-3">
						<textarea rows="5" asp-for="Body" class="form-control" placeholder="Message..."></textarea>
					</div>
					<button asp-action="SendEmail" asp-controller="Emails" type="submit" class="btn btn-create w-100">Send Email</button>
				</form>
			</div>
		</div>
	</div>
</body>
</html>
