<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shop.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-opacity-75 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Spaceships" asp-action="Index">Spaceship</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Kindergartens" asp-action="Index">Kindergarten</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="RealEstates" asp-action="Index">RealEstate</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="banner">
        @{
            string bannerImage = "";
            bool isVideo = false;
            var controller = ViewContext.RouteData.Values["controller"]?.ToString();
            switch (controller)
            {
                case "Home":
                    bannerImage = "~/images/homeBanner.mp4";
                    isVideo = true;
                    break;
                case "Spaceships":
                    bannerImage = "~/images/spaceshipBanner.jpg";
                    break;
                case "RealEstates":
                    bannerImage = "~/images/realEstateBanner.jpg";
                    break;
                case "Kindergartens":
                    bannerImage = "~/images/kindergartenBanner.jpg";
                    break;
                default:
                    bannerImage = "~/images/defaultBanner.jpg";
                    break;
            }
        }
        @if (isVideo)
        {
            <video autoplay muted loop class="img-fluid" style="width: 100%; height: 500px; object-fit: cover;">
                <source src="@Url.Content(bannerImage)" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        }
        else
        {
            <img src="@Url.Content(bannerImage)" alt="Banner" class="img-fluid" style="width: 100%; height: 350px; object-fit: cover;" />
        }
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Shop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
