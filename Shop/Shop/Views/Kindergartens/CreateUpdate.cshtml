@model Shop.Models.Kindergartens.KindergartenCreateUpdateViewModel

<div class="card crud-card m-5">
    <div class="card-header">
        @if (Model.Id.HasValue)
        {
            <h5 class="card-title">Update</h5>
        }
        else
        {
            <h5 class="card-title">Create</h5>
        }
    </div>
    <div class="card-body p-2">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <input asp-for="CreatedAt" type="hidden" />
            <input asp-for="UpdatedAt" type="hidden" />

            <div class="form-group form-group-item row">
                <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="GroupName" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ChildrenCount" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="KindergartenName" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="Teacher" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Teacher" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="Files" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input class="form-control form-group-item-input" asp-for="Files" multiple type="file" />
                    </div>
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="row">
                        @{
                            ViewData["ShowRemoveButton"] = true;
                        }
                        @foreach (var images in Model.Image)
                        {
                            <partial name="_Images" model="images" />
                        }
                    </div>
                </div>
            </div>

            <hr />

            @if (Model.Id.HasValue)
            {
                <input asp-action="update" asp-controller="kindergartens" type="submit" class="btn btn-primary" value="Update" />
            }
            else
            {
                <input asp-action="create" asp-controller="kindergartens" type="submit" class="btn btn-primary" value="Create" />
            }

            <a asp-action="Index" asp-controller="kindergartens" class="btn btn-success">Back</a>
        </form>
    </div>
</div>
