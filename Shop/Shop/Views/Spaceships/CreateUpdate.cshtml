@model Shop.Models.Spaceships.SpaceshipCreateUpdateViewModel

<div class="card crud-card m-5">
    <div class="card-header">
        @if (Model.Id.HasValue)
        {
            <h5 class="card-title">Update</h5>
        }
        else
        {
            <h5 class="card-title">Create</h5>
        }
    </div>
    <div class="card-body p-2">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <input asp-for="CreatedAt" type="hidden" />
            <input asp-for="ModifiedAt" type="hidden" />

            <div class="form-group form-group-item row ">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="Typename" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Typename" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="SpaceshipModel" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="SpaceshipModel" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="BuiltDate" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="Crew" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Crew" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="EnginePower" class="form-control form-group-item-input" />
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label asp-for="Files" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
						<input class="form-control" asp-for="Files" type="file" multiple />
                    </div>
                </div>
            </div>

            <div class="form-group form-group-item row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="row">
                        @{
                            ViewData["ShowRemoveButton"] = true;
                        }
                        @foreach (var images in Model.Image)
                        {
                            <partial name="_Images" model="images" />
                        }
                    </div>
                </div>
            </div>

            <hr />

            @if (Model.Id.HasValue)
            {
                <input asp-action="update" asp-controller="spaceships" type="submit" class="btn btn-primary" value="Update" />
            }
            else
            {
                <input asp-action="create" asp-controller="spaceships" type="submit" class="btn btn-primary" value="Create" />
            }

            <a asp-action="Index" asp-controller="spaceships" class="btn btn-success">Back</a>
        </form>
    </div>
</div>
