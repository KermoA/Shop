@model Shop.Models.Spaceships.SpaceshipDetailsViewModel

<div class="card crud-card m-5">
    <div class="card-header">
        <h5 class="card-title">Details</h5>
    </div>
    <div class="card-body p-2">
        <div class="row">
            <div class="col-sm-6">
                <div class="card crud-card mb-3">
                    <div class="card-body">
                        <dl class="row">

                            <div class="form-group row">
                                <label asp-for="Id" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.Id)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Typename" class="col-sm-4 col-form-label">Type Name</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.Typename)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="SpaceshipModel" class="col-sm-4 col-form-label">Spaceship Model</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.SpaceshipModel)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="BuiltDate" class="col-sm-4 col-form-label">Build Date</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.BuiltDate)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Crew" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.Crew)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="EnginePower" class="col-sm-4 col-form-label">Engine Power</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.EnginePower)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="CreatedAt" class="col-sm-4 col-form-label">Created At</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.CreatedAt)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="ModifiedAt" class="col-sm-4 col-form-label">Updated At</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.ModifiedAt)
                                </div>
                            </div>

                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var image in Model.Images)
            {
                <div class="col-sm-3 mt-3">
                    <div class="image-container position-relative">
                        <img class="card-image-top img-fluid" src="~/multipleFileUpload/@(image.FilePath ?? "noimage.jpg")" />
                    </div>
                </div>
            }
        </div>

        <hr />
        <a asp-action="Index" asp-controller="spaceships" class="btn btn-danger">Back</a>
    </div>
</div>
