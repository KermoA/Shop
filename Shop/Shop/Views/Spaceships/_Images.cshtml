@model Shop.Models.Spaceships.ImageViewModel

@{
    var photoPaths = "~/multipleFileUpload/" + (Model.FilePath ?? "noimage.jpg");
}

<div class="col-sm-3 mt-3">
    <div class="image-container position-relative">
        <img class="card-image-top img-fluid" src="@photoPaths" asp-append-version="true" />
        <div class="overlay">
            <form method="post" class="d-inline">
                <input asp-action="removeImage" asp-controller="spaceships" asp-route-imageId="@Model.ImageId" type="submit" class="btn btn-danger btn-sm" value="Remove" />
            </form>
        </div>
    </div>
</div>
