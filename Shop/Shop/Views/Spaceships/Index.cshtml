@model Shop.Models.Spaceships.SpaceshipsPagedViewModel

<div class="h1 text-white mt-4 mb-3">Spaceships</div>

<div class="container">
    <form method="post">
        <table class="table text-white table-hover" style="table-layout: fixed; width: 100%;">
            <thead class="text-white">
                <tr>
                    <th class="col-1" scope="col">Nr</th>
                    <th class="col-3" scope="col">Name</th>
                    <th class="col-3" scope="col">Type</th>
                    <th class="col-3" scope="col">Built date</th>
                    <th class="col-2" scope="col">Crew</th>
                    <th class="col-3" scope="col"></th>
                </tr>
            </thead>
            <tbody class="text-white">
                @for (int i = 0; i < Model.Spaceships.Count(); i++)
                {
                    var spaceship = Model.Spaceships.ElementAt(i);
                    <tr>
                        <td>@((Model.CurrentPage - 1) * Model.PageSize + (i + 1))</td>
                        <td>@spaceship.Name</td>
                        <td>@spaceship.Typename</td>
                        <td>@spaceship.BuiltDate</td>
                        <td>@spaceship.Crew</td>
                        <td>
                            <a asp-action="Details" asp-controller="Spaceships" asp-route-id="@spaceship.Id" class="btn btn-info">Details</a>
                            <a asp-action="Update" asp-controller="Spaceships" asp-route-id="@spaceship.Id" class="btn btn-primary">Update</a>
                            <a asp-action="Delete" asp-controller="Spaceships" asp-route-id="@spaceship.Id" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>

    <div class="pagination text-center">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a asp-action="Index" asp-route-pageNumber="@i" class="btn @((i == Model.CurrentPage) ? "btn-primary" : "btn-secondary") mx-1">
                @i
            </a>
        }
    </div>
</div>
