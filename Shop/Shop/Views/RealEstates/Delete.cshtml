@model Shop.Models.RealEstates.RealEstateDeleteViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>
</head>
<body>
<div class="card crud-card m-5">
    <div class="card-header">
        <h5 class="card-title">Delete</h5>
    </div>
    <div class="card-body p-2">
        <div class="row">
            <div class="col-sm-6">
                <div class="card crud-card mb-3">
                    <div class="card-body">
                        <dl class="row">

                            <div class="form-group row">
                                <label asp-for="Id" class="col-sm-4 col-form-label">ID</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.Id)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Size" class="col-sm-4 col-form-label">Size</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.Size)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Location" class="col-sm-4 col-form-label">Location</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.Location)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="RoomNumber" class="col-sm-4 col-form-label">Room Number</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.RoomNumber)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="BuildingType" class="col-sm-4 col-form-label">Building Type</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.BuildingType)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="CreatedAt" class="col-sm-4 col-form-label">Created At</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.CreatedAt)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="ModifiedAt" class="col-sm-4 col-form-label">Updated At</label>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.ModifiedAt)
                                </div>
                            </div>

                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var image in Model.Image)
            {
                <div class="col-sm-3 mt-3">
                    <div class="image-container position-relative">
                        <img class="card-image-top img-fluid" src="@image.Image" />
                    </div>
                </div>
            }
        </div>

	<form asp-action="DeleteConfirmation">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-delete" />
		<a asp-action="Index" asp-controller="realEstates" class="btn btn-back">Back</a>
	</form>
</div>
</body>
</html>